<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/rotateLeftBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="onItemClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/rotate_left" />

    <ImageButton
        android:id="@+id/rotateRightBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="onItemClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/rotate_right" />

    <ImageButton
        android:id="@+id/swapWBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="onItemClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/swap_w" />

    <ImageButton
        android:id="@+id/swapHBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="onItemClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/swap_h" />

    <ImageButton
        android:id="@+id/cropBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:onClick="onItemClicked"
        android:scaleType="fitCenter"
        android:src="@drawable/crop" />

</LinearLayout>